FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1 0 0);

boundaryField
{
    top
    {
        // type            fixedValue;
        // value           uniform (0 0 0);
        type            symmetryPlane;
    }

    bottom
    {
        // type            fixedValue;
        // value           uniform (0 0 0);
        type            symmetryPlane;
    }

    inlet
    {
        // type            noSlip;
        // type            fixedValue;
        // value           uniform (0 0 0);
        type            uniformFixedValue;
        uniformValue    constant (1 0 0);
        // type            freestream;
        // freestreamValue uniform (1 0 0);
    }

    outlet
    {
        // type            noSlip;
        type            zeroGradient;
        // type            fixedValue;
        // value           uniform (0 0 0);
        // type            freestream;
        // freestreamValue uniform (1 0 0);
    }

    deck
    {
        // type            noSlip;
        type            symmetry;
    }

    frontAndBack
    {
        type            empty;
    }

    defaultFaces
    {
        type            empty;
    }
}

