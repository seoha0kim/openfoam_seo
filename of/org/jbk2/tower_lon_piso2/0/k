FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.06;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0.06;
    }
    outlet
    {
        type            zeroGradient;
    }
    top
    {
        // type            kqRWallFunction;
        // value           uniform 0.06;
        type            symmetryPlane;
    }
    bottom
    {
        // type            kqRWallFunction;
        // value           uniform 0.06;
        type            symmetryPlane;
    }
    deck
    {
        type            kqRWallFunction;
        value           uniform 0.06;
    }
    frontAndBack
    {
        type            empty;
    }
}


