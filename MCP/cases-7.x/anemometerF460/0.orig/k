FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.0001;

boundaryField
{
    inlet
    {
        type            turbulentIntensityKineticEnergyInlet;
        intensity       0.03;
        value           uniform 0.01;
    }
    outlet 
    {
        type            zeroGradient;
    }
    fixedWalls
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    movingWalls
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    AMI1
    {
        type            cyclicAMI;
        value           uniform 0;
    }
    AMI2
    {
        type            cyclicAMI;
        value           uniform 0;
    }
}

// ************************************************************************* //
